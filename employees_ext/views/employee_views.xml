<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_employee_ext_form_own" model="ir.ui.view">
        <field name="name">hr.employee.ext.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_phone']" position="after">
                <field name="employee_code" />
                <field name="employee_section" />
                <field name="customer_account" />
                <field name="project_code" />
                <field name="job_number" />
            </xpath>
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="border_number" />
                <field name="operating_unit_id" />
                <field name="country_code" />
                <field name="company_country_code" />
                <field name="arrival_date" />
                <field name="employee_type" />
                <field name="profession_id" />
                <field name="identification_id" />
                <field name="project_joining_date" />
                <field name="job_title" />
                <field name="crm_id" readonly="1" />
                <field name="user_name" readonly="1" groups="hr.group_hr_manager" />
            </xpath>
        </field>
    </record>
    <record id="view_department_ext_form" model="ir.ui.view">
        <field name="name">hr.department.ext.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="crm_id" readonly="1" />
                <field name="user_name" readonly="1" groups="hr.group_hr_manager" />
            </xpath>
        </field>
    </record>
</odoo>