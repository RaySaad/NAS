<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="employee_section_list_view" model="ir.ui.view">
        <field name="name">employee.section.list</field>
        <field name="model">employee.section</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="company_id" />
            </list>
        </field>
    </record>
    <record id="employee_section_form_view" model="ir.ui.view">
        <field name="name">employee.section.form</field>
        <field name="model">employee.section</field>
        <field name="arch" type="xml">
            <form string="Employee Section">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="company_id" readonly="1" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="action_employee_sections" model="ir.actions.act_window">
        <field name="name">Employee Section</field>
        <field name="res_model">employee.section</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_employee_section" name="Employee Sections" parent="hr.menu_human_resources_configuration" action="action_employee_sections" sequence="10" groups="base.group_user" />
</odoo>