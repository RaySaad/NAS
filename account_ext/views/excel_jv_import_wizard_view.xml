<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_excel_jv_import_wizard_form" model="ir.ui.view">
        <field name="name">excel.jv.import.wizard.form</field>
        <field name="model">excel.jv.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Excel JV">
                <group>
                    <field name="excel_file" filename="filename" widget="binary"/>
                    <field name="filename" invisible="1"/>
                </group>
                <group>
                    <field name="jv_id" readonly="1"/>
                </group>
                <footer>
                    <button name="action_import_excel" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_excel_jv_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Excel JV</field>
        <field name="res_model">excel.jv.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_excel_jv_import"
              name="Import Excel JV"
              parent="account.menu_finance_entries"
              action="action_excel_jv_import_wizard"
              sequence="5"/>
</odoo>

