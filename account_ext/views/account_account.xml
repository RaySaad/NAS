<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_form" model="ir.ui.view">
        <field name="name">account.account.form.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_type']" position="after">
                <field name="parent_account" string="Main Account" invisible="account_type == 'main_account'"
                       options="{'no_quick_create': True, 'no_create': True, 'no_open': True}"/>
                <field name="level" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
