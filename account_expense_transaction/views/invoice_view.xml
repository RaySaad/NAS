<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_invoice_supplier_form_view_expense_inherit" model="ir.ui.view">
        <field name="name">account.invoice_supplier_form.expense.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/list/field[@name='name']" position="after">
                <field name="expense_nature" optional="hide"/>
                <field name="expense_type_id" optional="hide"
                       invisible="expense_nature == 'normal'"
                       required="expense_nature == 'prepaid'"
                />
                <field name="start_date" optional="hide"
                       invisible="expense_nature == 'normal'"
                       required="expense_nature == 'prepaid'"
               />
                <field name="end_date" optional="hide"
                       invisible="expense_nature == 'normal'"
                       required="expense_nature == 'prepaid'"
               />
            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='currency_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
</odoo>
