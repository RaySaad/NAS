<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PDF Report Action -->
    <record id="action_report_employee_statement" model="ir.actions.report">
        <field name="name">Employee Financial Statement</field>
        <field name="model">employee.statement.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">employee_financial_statement.report_employee_statement</field>
        <field name="report_file">employee_financial_statement.report_employee_statement</field>
        <field name="print_report_name">'Employee_Statement_%s_%s' % (object.employee_id.name, object.create_date.strftime('%Y%m%d'))</field>
        <field name="binding_model_id" ref="model_employee_statement_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
